@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<WebStore.Models.Employee>

<h3>Сотрудники</h3>
<table>
    <thead>
        <tr>
            <th>#</th>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Отчество</th>
            <th>Возраст</th>
            <th>Ссылка</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.LastName</td>
                <td>@employee.FirstName</td>
                <td>@employee.Patronymic</td>
                <td>@(DateTime.Now.Year - employee.Birthday.Year)</td>
                <td>@Html.ActionLink("Детали", "DetailsEmployee", new { id = employee.Id }) </td>
            </tr>
        }
    </tbody>
</table>
