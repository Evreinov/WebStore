@model RegisterUserViewModel

<div class="col-sm-4">
    <div class="signup-form">
        <!--sign up form-->
        <h2>Регистрация нового пользователя!</h2>
        <form asp-action="Register" asp-antiforgery="true">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="UserName" placeholder="Name" />
            <span asp-validation-for="UserName"></span>

            <input asp-for="Password" placeholder="Password" />
            <span asp-validation-for="Password"></span>

            <input asp-for="PasswordConfirm" placeholder="Password Confirm" />
            <span asp-validation-for="PasswordConfirm"></span>

            <button type="submit" class="btn btn-default">Регистрация</button>
        </form>
    </div><!--/sign up form-->
</div>
